<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="nome"
            android:ems="10"
            android:id="@+id/editTextNome"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="sobre nome"
            android:ems="10"
            android:id="@+id/editTextSobrenome" android:minHeight="48dp"/>
    <CheckBox
            android:text="Vermelho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBox1"/>
    <CheckBox
            android:text="Verde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBox2"/>
    <CheckBox
            android:text="Azul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBox3"/>
    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal" android:id="@+id/radioGroupSexo">
        <RadioButton
                android:text="Masculino"
                android:layout_width="150dp"
                android:layout_height="wrap_content" android:id="@+id/radioButtonMasculino"/>
        <RadioButton
                android:text="Feminino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButtonFeminino"/>
    </RadioGroup>
    <Button
            android:text="Enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonEnviar"/>
    <Button
            android:text="Limpar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonLimpar"/>
    <TextView
            android:text="Resultado"
            android:layout_width="match_parent"
            android:layout_height="58dp" android:id="@+id/textViewResultado"
            android:gravity="center"/>
</LinearLayout>


